{
  "name": "ft-transcendence",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "packageManager": "pnpm@10.18.2",
  "scripts": {
    "dev": "pnpm --parallel run dev",
    "build": "pnpm --recursive run build",
    "lint": "pnpm --recursive exec eslint .",
    "test": "pnpm --recursive run test",
    "frontend:dev": "pnpm --filter frontend run dev",
    "backend:dev": "pnpm --filter backend run dev",
    "blockchain:compile": "pnpm --filter blockchain run compile",
    "blockchain:test": "pnpm --filter blockchain run test",
    "blockchain:deploy:local": "pnpm --filter blockchain run deploy:local",
    "blockchain:deploy:fuji": "pnpm --filter blockchain run deploy:fuji",
    "blockchain:node": "pnpm --filter blockchain run node",
    "install:all": "pnpm install --recursive"
  },
  "pnpm": {
    "overrides": {
      "eslint": "^9.29.0"
    },
    "onlyBuiltDependencies": [
      "argon2",
      "better-sqlite3",
      "esbuild"
    ]
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.1.0",
    "eslint": "^9.29.0",
    "typescript": "~5.8.3",
    "vitest": "^2.1.0"
  }
}
